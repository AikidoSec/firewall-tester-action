{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "allowJs": false,
    "isolatedModules": true
  },
  "exclude": [
    "__fixtures__",
    "__tests__",
    "coverage",
    "dist",
    "node_modules",
    "zen-demo"
  ],
  "include": ["src/**/*"]
}
