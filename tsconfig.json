{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "allowJs": false,
    "isolatedModules": true
  },
  "exclude": ["coverage", "dist", "node_modules"],
  "include": ["src/**/*"]
}
